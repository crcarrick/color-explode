{
  "name": "color-explode",
  "version": "1.0.0",
  "description": "PostCSS plugin that takes hex/rgb/hsl color variables and explodes them into their component parts.",
  "main": "./dist/color-explode.umd.js",
  "module": "./dist/color-explode.js",
  "exports": {
    ".": {
      "import": "./dist/color-explode.js",
      "require": "./dist/color-explode.umd.js"
    }
  },
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "color-explode"
  ],
  "scripts": {
    "build": "vite build",
    "test": "vitest --coverage"
  },
  "author": "Chris Carrick <chris@crcarrick.dev>",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/crcarrick/color-explode",
    "type": "git"
  },
  "engines": {
    "node": ">=18.2.0"
  },
  "peerDependencies": {
    "color": "^4.2.3",
    "postcss": "^8.3.0"
  },
  "devDependencies": {
    "@types/color": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "@vitest/coverage-c8": "^0.28.5",
    "clean-publish": "^3.4.2",
    "color": "^4.2.3",
    "eslint": "^8.0.1",
    "eslint-plugin-jest": "^25.2.2",
    "postcss": "^8.3.11",
    "typescript": "^4.9.5",
    "vite": "^4.1.1",
    "vitest": "^0.28.5"
  },
  "packageManager": "yarn@3.3.1"
